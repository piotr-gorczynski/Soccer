rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /tournaments/{tournamentId} {
      // Permit GET and LIST from any authenticated user
      allow get, list: if request.auth != null;

      // (Optional) if you store sub-collections such as
      // /tournaments/{id}/participants/â€¦
      match /{subDoc=**} {
        allow get, list: if request.auth != null;
      }
    }

    // 1. Users: anyone signed-in can read any profile,
    //    but only the owner can create or modify their own doc.
    match /users/{userId} {
      allow read: if request.auth.uid != null;

      // Allow a user to create their own profile document,
      // and to update it thereafter (e.g. save FCM token).
      allow create, update: if request.auth.uid == userId;

      // No one else may delete or overwrite anotherâ€™s profile.
      allow delete: if false;
    }

    // 2. Invitations: sender may create, either party may read
    match /invitations/{invId} {
      allow create: if request.auth.uid == request.resource.data.from
                 && request.resource.data.status == "pending"
                 && request.resource.data.to is string;
      allow read:   if request.auth.uid == resource.data.from
                 || request.auth.uid == resource.data.to;
      allow update, delete: if false;
    }

    // 3. Matches: only participants may create/read/update
    /* â”€â”€ helper â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    function isSignedIn() { return request.auth != null; }
    function isMatchPlayer(matchId) {
      return request.auth.uid in [
        get(/databases/$(database)/documents/matches/$(matchId)).data.player0,
        get(/databases/$(database)/documents/matches/$(matchId)).data.player1
      ];
    }

    // -------------------------------------------------------------------
    //  ğŸ†•  Nested matches (e.g. /tournaments/{tid}/matches/{mid})
    // -------------------------------------------------------------------
    match /{parentPath=**}/matches/{matchId} {

      function isParticipant() {
        /*  During create() the document doesnâ€™t exist yet, so fall back to
            request.resource.data while still allowing reads/updates later. */
        return request.auth.uid in [
          (resource != null ? resource.data.player0 : request.resource.data.player0),
          (resource != null ? resource.data.player1 : request.resource.data.player1)
        ];
      }

      // ğŸ” List queries (WaitingActivity, â€œmy gamesâ€ lists, etc.)
      allow list: if isSignedIn();

      // ğŸ“ Create a new match (friendlies or Cloud Function)
      allow create: if isSignedIn()
                 && isParticipant()
                 && request.resource.data.player0 is string
                 && request.resource.data.player1 is string;

      // ğŸ“– Read / âœï¸ update / âŒ delete an existing nested match
      allow get, update, delete: if isSignedIn() && isParticipant();

      // â”€â”€ moves sub-collection â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
      match /moves/{moveId} {
        allow read, write: if isSignedIn() && isParticipant();
      }
    }

    /* â”€â”€ /matches/{matchId} â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    match /matches/{matchId} {

      /* 1ï¸âƒ£  allow queries (WaitingActivity uses a list query) */
      allow list: if isSignedIn();     // no access to resource.data here

      /* 2ï¸âƒ£  allow client-side creation of a match document */
      allow create: if isSignedIn() && isMatchPlayer(matchId)
                    && request.resource.data.player0 is string
                    && request.resource.data.player1 is string;

      /* single-doc reads / edits */
      allow get, update, delete: if isSignedIn() && isMatchPlayer(matchId);

      /* ---- moves sub-collection ---- */
      match /moves/{moveId} {
        allow read, write: if isSignedIn() && isMatchPlayer(matchId);
      }
    }

    // 4. Everything else denied
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
