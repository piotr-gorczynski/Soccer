rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Read: any signed-in user can read any profile (for nickname search)
      allow read: if request.auth != null;

      // Write: only the owner can update their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /invitations/{invId} {
      allow create: if request.auth.uid == request.resource.data.from;
      allow read: if request.auth.uid == resource.data.to || request.auth.uid == resource.data.from;
      allow update: if request.auth.uid == resource.data.to && resource.data.status == "pending";
      allow delete: if false;
    }

    // (Optional: add match /matches if you're ready)
  }
}
